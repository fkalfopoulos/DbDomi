
@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<DbDomi.Models.ClientViewModel>




<div class="text-center" align="center">

    <br />
    <img class="img-fluid" id="logo" src="~/images/domi2.jpg" />
</div>
<br />

@if (User.Identity.IsAuthenticated)
{
    @if (!User.IsInRole("Admin"))
    {
        <p> Thank you @User.Identity.Name for your registration to our site. </p>


    }
}
<br />
<br />
@if (User.Identity.IsAuthenticated)
{
    @if (User.IsInRole("Admin"))
    {
        <div>
            <p align="center">
                Hello,<b> @User.Identity.Name</b>
                This is the list with the registered clients in our site
            </p>
        </div>
        <br />
        <br />


        <table id="example" class="table table-striped table-bordered" style="width:100%">
            <thead>

                <tr>
                    <th>Photo</th>
                    <th>FirstName</th>
                    <th>Lastname</th>
                    <th>E-Mail</th>
                    <th>Phone</th>
                    <th>Comments</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var client in Model)
                {

                    <tr>
                        <th> <img height="170" width="130" src="~/images/userAvatars/@Url.Content(client.UserAvatar)" class="rounded-circle" />
                        <th>@client.FirstName</th>
                        <th>@client.LastName</th>
                        <th>@client.Email</th>
                        <th>@client.Comment</th>
                        <th>@client.Comment</th>

                    </tr>

                }
                

            </tbody>
            <tfoot>

                <tr>
                    <th>Photo</th>
                    <th>FirstName</th>
                    <th>LastName</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>Comments</th>
                </tr>
            </tfoot>
        </table>





    }
}


@section Scripts {
    <script src="~/css/site.css"></script>}




